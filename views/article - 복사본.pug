doctype html
html
    head
        title #{profile.usert}의 게시물
        link(rel='stylesheet', href='/public/styles/style.css')
        style.
            body {
                display: flex;
                flex-direction: column; /* 세로 방향으로 정렬 */
                align-items: center; /* 가로 방향 가운데 정렬 */
                background-color: #f8f9fa; /* 배경색 */
                min-height: 100vh; /* 최소 높이 설정 */
                padding: 20px; /* 내부 여백 */
            }
            .button-container {
                margin-top: 20px; /* 버튼 간격 */
            }
            .profile-button {
                display: inline-block; /* 블록 요소로 변경 */
                background-color: #007bff; /* 버튼 색상 */
                color: white; /* 글자 색상 */
                border: none; /* 테두리 제거 */
                padding: 10px 15px; /* 패딩 */
                border-radius: 5px; /* 둥글게 */
                cursor: pointer; /* 포인터 커서 */
                text-decoration: none; /* 링크 스타일 제거 */
                margin: 10px; /* 버튼 간격 */
            }
            .post-container {
                background-color: #ffe6f2; /* 연분홍색 배경 */
                border-radius: 5px; /* 둥글게 */
                padding: 15px; /* 패딩 */
                margin: 10px 0; /* 상하 여백 */
                width: 100%; /* 최대 너비 */
                max-width: 600px; /* 최대 너비 설정 */
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 그림자 효과 */
            }
            .delete-button {
                background-color: #dc3545; /* 삭제 버튼 색상 */
                color: white; /* 글자 색상 */
                border: none; /* 테두리 제거 */
                padding: 5px 10px; /* 패딩 */
                border-radius: 5px; /* 둥글게 */
                cursor: pointer; /* 포인터 커서 */
                margin-top: 10px; /* 상단 여백 */
                font-size: 0.8em; /* 글자 크기 줄이기 */
            }
    body
        h1 #{profile.usert}의 게시물

        // 버튼 컨테이너
        .button-container
            // 프로필 버튼
            a(href=`/profile/${profile.username}`, class='profile-button') 프로필

        // 자신의 게시물 작성란이 보이는 경우
        if user && user.username === profile.username
            form(action=`/profile/${profile.username}/article`, method='post', enctype='multipart/form-data')
                textarea(name='content', placeholder='게시물 내용을 작성하세요...', required=true, rows='4', style='width: 100%; max-width: 600px;') 
                input(type='file', name='image', accept='image/*') 
                button(type='submit', class='profile-button') 게시물 작성

        // 게시물 내용은 나중에 추가할 수 있습니다.
        if Array.isArray(posts) && posts.length > 0
            each post in posts
                .post-container
                    p= post.content
                    if post.image
                        img(src=post.image, alt='게시물 이미지', width='100%')
                    // 삭제 버튼 (자신의 게시물일 때만)
                    if user && user.username === profile.username
                        form(action=`/post/${post.id}/delete`, method='post')
                            button(type='submit', class='delete-button') 삭제
        else
            p 게시물이 없습니다.
