doctype html
html
    head
        title 프로필 수정
        link(rel='stylesheet', href='/public/styles/style.css')
        style.
            body {
                display: flex;
                flex-direction: column;
                align-items: center; /* 수평 가운데 정렬 */
                background-color: #f8f9fa; /* 배경색 설정 */
                min-height: 100vh; /* 화면 높이 최소 설정 */
                padding: 20px; /* 내부 여백 */
            }
            h1 {
                margin-bottom: 20px; /* 제목과 폼 간격 조정 */
            }
            #profile-edit-form {
                display: flex;
                flex-direction: column; /* 세로 방향으로 정렬 */
                width: 300px; /* 폼 너비 설정 */
                padding: 20px; /* 폼 내부 여백 */
                background-color: #fff; /* 폼 배경색 */
                border-radius: 5px; /* 둥근 경계선 */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* 그림자 효과 */
            }
            .input-container {
                margin-bottom: 15px; /* 입력란 간격 조정 */
            }
            input[type='file'], textarea {
                width: 100%; /* 입력란 너비 100% */
                padding: 10px; /* 내부 여백 */
                border: 1px solid #ced4da; /* 테두리 색상 */
                border-radius: 5px; /* 둥글게 */
                box-sizing: border-box; /* 패딩 포함 전체 너비 계산 */
            }
            button {
                width: 100%; /* 버튼 너비 100% */
                padding: 10px; /* 버튼 내부 여백 */
                background-color: #007bff; /* 버튼 배경색 */
                color: white; /* 버튼 글자색 */
                border: none; /* 테두리 제거 */
                border-radius: 5px; /* 둥글게 */
                cursor: pointer; /* 포인터 커서 */
            }
            button:hover {
                background-color: #0056b3; /* 버튼 호버 색상 */
            }
            a {
                text-align: center; /* 링크 가운데 정렬 */
                display: block; /* 블록 요소로 변경 */
                margin-top: 10px; /* 버튼과 간격 조정 */
                color: #007bff; /* 링크 색상 */
                text-decoration: none; /* 밑줄 제거 */
            }
            a:hover {
                text-decoration: underline; /* 호버 시 밑줄 추가 */
            }
            .section-title {
                font-weight: bold; /* 제목 굵게 */
                margin-top: 20px; /* 위쪽 여백 추가 */
                margin-bottom: 5px; /* 아래쪽 여백 추가 */
                text-align: center; /* 가운데 정렬 */
            }
            .underline {
                border-bottom: 2px solid #007bff; /* 밑줄 스타일 */
                margin-bottom: 10px; /* 아래쪽 여백 추가 */
            }
    body
        h1 프로필 수정
        
        form(id='profile-edit-form', action='/edit', method='post', enctype='multipart/form-data')
            // 현재 프로필 사진 미리보기
            if profile.profile_picture
                img(src=`/uploads/${profile.profile_picture.split('/').pop()}`, alt='프로필 사진', width='150', style='display: block; margin: 0 auto;') 
            
            // 프로필 사진 수정 섹션
            .section-title 프로필 사진 수정
            .underline
            .input-container
                input(type='file', name='profile_picture') 
            
            // 자기소개 수정 섹션
            .section-title 자기소개 수정
            .underline
            .input-container
                // 기존 자기소개 내용을 기본값으로 설정
                textarea(name='bio', placeholder='자기소개 (변경할 내용)', required=false) #{profile.bio}
            
            button(type='submit') 수정
            a(href=`/profile/${profile.username}`, class='profile-button') 취소

        // 로그아웃 버튼
        form(action='/logout', method='post')
            button(type='submit') 로그아웃
